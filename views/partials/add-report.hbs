<form class="box mt-6" action="/station/{{station._id}}/addreport" method="POST">
  <label>Enter Report Details:</label>
  <div class="field is-horizontal">
    <div class="field-body has-text-centered">
      <div class="field">
        <label class="label mt-5">Code</label>
        <input class="input" type="text" placeholder="00" name="code">
      </div>
      <div class="field">
        <label class="label mt-5">Temperature</label>
        <input class="input" type="text" placeholder="00.0C" name="temperature">
      </div>
      <div class="field">
        <label class="label mt-5">Wind Speed</label>
        <input class="input" type="text" placeholder="00.00kMh" name="windSpeed">
      </div>
      <div class="field">
        <label class="label mt-5">Wind Direction</label>
        <input class="input" type="text" placeholder="000deg" name="windDirection">
      </div>
      <div class="field">
        <label class="label mt-5">Pressure</label>
        <input class="input" type="text" placeholder="000hPa" name="pressure">
      </div>
    </div>
  </div>
  <button class="button is-info is-rounded is-outlined is-fullwidth">Add Report</button>
</form>